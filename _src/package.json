{
  "name": "stealthefish.com",
  "private": true,
  "scripts": {
    "build": "node metalsmith.js",
    "debug": "node --nolazy --inspect-brk=9229 metalsmith.js",
    "update-github-repo-list": "mv repo.json repo.saved.json ; npm run build",
    "start": "node_modules/.bin/nodemon metalsmith.js",
    "watch": "node_modules/.bin/nodemon metalsmith.js"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/"
    ],
    "watch": [
      "../assets/sass/",
      "package.json",
      "src/",
      "layouts/",
      "src/",
      "templates/",
      "metalsmith.js"
    ],
    "ext": "md,js,html,scss,json",
    "events": {
      "start": "node_modules/.bin/http-server ../ -p 8080",
      "restart": "node tools/notifier.js 'Blog recompiled'"
    }
  },
